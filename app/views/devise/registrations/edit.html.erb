<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="">
      <h2>Setup</h2>
      <p>Set your preferred meeting day, time, and place.</p>
      <%= f.select :time_of_day, options_for_select([['Early Morning 6am-8am', 1],['Mid Morning 8am-10am', 2],['Late Morning 10am-12pm', 3]]) %>
    </div>
  </div>

  <div class="row">
    <div class="">
      <%= f.check_box :days_of_week %>
      <%= f.label :days_of_week, "Mo" %>
      <%= f.check_box :days_of_week %>
      <%= f.label :days_of_week, "Tu" %>
      <%= f.check_box :days_of_week %>
      <%= f.label :days_of_week, "We" %>
      <%= f.check_box :days_of_week %>
      <%= f.label :days_of_week, "Th" %>
      <%= f.check_box :days_of_week %>
      <%= f.label :days_of_week, "Fr" %>
      <%= f.check_box :days_of_week %>
      <%= f.label :days_of_week, "Sa" %>
      <%= f.check_box :days_of_week %>
      <%= f.label :days_of_week, "Su" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
