<div class="row">
  <div class="">
    <h2>Setup</h2>
    <p>Set your preferred meeting day, time, and place.</p>
      <form action="">

      <select name="time-of-day" class="time-of-day">
        <option value="early">Early Morning 6am-8am</option>
        <option value="mid">Mid Morning 8am-10am</option>
        <option value="late">Late Morning 10am-12pm</option>
      </select>
      <p>
        <label>M</label>
        <input type="checkbox" name="dayofweek" value="mon" class="day-of-week">
        <label>Tu</label>
        <input type="checkbox" name="dayofweek" value="tue" class="day-of-week">
        <label>W</label>
        <input type="checkbox" name="dayofweek" value="wed" class="day-of-week">
        <label>Th</label>
        <input type="checkbox" name="dayofweek" value="thu" class="day-of-week">
        <label>F</label>
        <input type="checkbox" name="dayofweek" value="fri" class="day-of-week">
        <label>Sa</label>
        <input type="checkbox" name="dayofweek" value="sat" class="day-of-week">
        <label>Su</label>
        <input type="checkbox" name="dayofweek" value="sun" class="day-of-week">
      </p>
      </form>
      <a href="" class="button">Save</a>
  </div>

  <div class="large-3 medium-3">
    <h2>Attend</h2>
    <%= link_to 'Schedule a local meeting.', meetings_path %>
  </div>
</div>
